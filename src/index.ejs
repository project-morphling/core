<%
const manifest = htmlWebpackPlugin.options.manifest || {};
%>

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Project Morphling</title>

        <link rel="shortcut icon" href="<%= manifest['images\\favicon.ico'] %>">

        <% if (manifest['theme.css']) { %>
        <link rel="stylesheet" href="<%= manifest['theme.css'] %>"/>
        <% } %>
        <% if (manifest['app.css']) { %>
        <link rel="stylesheet" href="<%= manifest['app.css'] %>"/>
        <% } %>
    </head>
    <body>
        <div id="app-container"></div>

        <script defer type="text/javascript" src="<%= manifest['vendor.js'] %>"></script>
        <script defer type="text/javascript" src="<%= manifest['theme.js'] %>"></script>
        <script defer type="text/javascript" src="<%= manifest['app.js'] %>"></script>
    </body>
</html>